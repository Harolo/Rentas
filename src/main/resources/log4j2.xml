<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
<Properties>
    <Property name="rutaLog">/logs</Property>
    <Property name="formatoLog">%date %level %contextName [%thread] %logger{36} [%file:%line] %msg%n</Property>
</Properties>
<Appenders>
    <Console name="Console" target="SYSTEM_OUT">
        <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
    </Console>
    <RollingFile name="File" fileName="${rutaLog}/app-servicio1.log"
                 filePattern="${rutaLog}/app-servicio1_%d{dd-MM-yyyy}.log">
        <PatternLayout>
            <Pattern>${formatoLog}</Pattern>
        </PatternLayout>
        <Policies>
            <TimeBasedTriggeringPolicy interval="1"/>
        </Policies>
        <DefaultRolloverStrategy max="30"/>
    </RollingFile>
</Appenders>
<Loggers>
    <Root level="ALL">
        <AppenderRef ref="Console" />
    </Root>
    <Logger name="debuglogger" level="DEBUG" additivity="false">
        <AppenderRef ref="File" level="debug"/>
    </Logger>
</Loggers>
</Configuration>